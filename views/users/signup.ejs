<% layout("layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on StayNest !</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input id="username" required type="text" name="username" class="form-control">
            <div class="valid-feedback">Looks Good !</div>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input id="email" required type="email" name="email" class="form-control">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input id="password" required type="password" name="password" class="form-control">
        </div>
        <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>